{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "src/**/*",
    "**/*.ts",
    "**/*.tsx",
    "pages/_app.js",
    "components/3D.env/Controls.jsx",
    "components/3D.env/CSS3DSplash.tsx",
    "components/3D.env/models/MeshText.jsx",
    "components/3D.env/3DProjects.jsx",
    "components/3D.env/3DSplash.jsx",
    "components/3D.env/models/Projects.jsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
